---
import LandingHeader from '../components/LandingHeader.astro';
import HeroSection from '../components/HeroSection.astro';
import ChargeSection from '../components/ChargeSection.astro';
import Layout from '../layouts/Layout.astro';
import Section from '../components/Section.astro';
---

<Layout title="Welcome to Astro.">
	<LandingHeader />
	<main class="snap-y snap-mandatory relative h-screen w-full overflow-y-auto overflow-x-hidden">
		<div class="snap-center">
			<HeroSection />
		</div>
		<div class="snap-center">
			<Section color="black" imgSource="https://raw.githubusercontent.com/midudev/landing-tesla/main/public/model-y.webp" title="Model Y" />
		</div>
		<div class="snap-center">
			<Section color="black" imgSource="https://raw.githubusercontent.com/midudev/landing-tesla/main/public/model-s.webp" title="Model S" />
		</div>
		<div class="snap-center">
			<Section color="black" imgSource="https://raw.githubusercontent.com/midudev/landing-tesla/main/public/model-3.webp" title="Model 3" />
		</div>
		<div class="snap-center">
			<Section color="black" imgSource="https://raw.githubusercontent.com/midudev/landing-tesla/main/public/model-x.webp" title="Model X" />
		</div>
	</main>
</Layout>
